# ============================================
# GRACE-X Brain API Configuration v7.0
# ============================================
# Copy this file to .env and fill in your API keys
# IMPORTANT: Rename this file to .env (remove .txt extension)
# ============================================

# ============================================
# PROVIDER SELECTION
# ============================================
# Choose your LLM provider: openai, anthropic, openrouter, ollama
LLM_PROVIDER=anthropic

# ============================================
# API KEYS - AI/LLM
# ============================================
# Generic API_KEY (used if provider-specific key not set)
API_KEY=your_api_key_here

# Provider-specific keys (optional - override generic API_KEY)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# OPENROUTER_API_KEY=sk-or-...

# ============================================
# OPENAI SETTINGS
# ============================================
# Models: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-4, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# ============================================
# ANTHROPIC (CLAUDE) SETTINGS
# ============================================
# Models: claude-sonnet-4-20250514 (NEWEST/BEST!), claude-3-5-sonnet-20241022, claude-3-5-haiku-20241022
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ============================================
# OPENROUTER SETTINGS
# ============================================
# OpenRouter gives access to multiple providers through one API
# Get key at: https://openrouter.ai/keys
# Models: anthropic/claude-3.5-sonnet, openai/gpt-4o, google/gemini-pro
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# ============================================
# OLLAMA SETTINGS (LOCAL LLM)
# ============================================
# Run models locally with Ollama (https://ollama.ai)
# No API key needed - completely private!
OLLAMA_BASE_URL=http://localhost:11434
# Models: llama3.2, llama3.1, mistral, codellama, phi3, gemma2
OLLAMA_MODEL=llama3.2

# ============================================
# SERVER SETTINGS
# ============================================
PORT=3000

# Request limits
MAX_BODY_SIZE=1mb
REQUEST_TIMEOUT=30000

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=30

# ============================================
# CORS SETTINGS
# ============================================
# Comma-separated list of allowed origins (* for all)
CORS_ORIGINS=*

# ============================================
# LOGGING
# ============================================
ENABLE_LOGGING=true
# Levels: error, warn, info, debug
LOG_LEVEL=info

# ============================================
# PRODUCTION SETTINGS
# ============================================
# NODE_ENV=production
# APP_URL=https://your-domain.com


