# ============================================
# CACHING SETTINGS
# ============================================
# How long to cache sports data (in minutes)
# Higher = fewer API calls, lower = fresher data
# Recommended: 5 for live events, 10-30 for fixtures
SPORTS_CACHE_DURATION=5

# Cache by data type (overrides global setting)
CACHE_LIVE_SCORES=2
CACHE_FIXTURES=15
CACHE_STANDINGS=60
CACHE_ODDS=5
CACHE_STATS=30

# ============================================
# FALLBACK SETTINGS
# ============================================
# What to do when API fails
# Options: mock, error, retry
FALLBACK_MODE=mock

# Retry attempts before falling back
API_RETRY_ATTEMPTS=2

# Retry delay (milliseconds)
API_RETRY_DELAY=1000

# ============================================
# FREE TIER OPTIMIZATION
# ============================================
# Enable smart features to maximize free tier usage

# Enable intelligent caching
SMART_CACHE=true

# Only fetch live data during match times
SMART_LIVE_DETECTION=true

# Batch requests where possible
BATCH_REQUESTS=true

# Use CDN for static data (team logos, etc.)
USE_CDN=true

# ============================================
# USAGE TRACKING
# ============================================
# Track API usage to avoid exceeding free tiers
TRACK_API_USAGE=true

# Warn when approaching limits (percentage)
USAGE_WARNING_THRESHOLD=80

# Stop requests when limit reached
ENFORCE_RATE_LIMITS=true

# ============================================
# PROVIDER-SPECIFIC SETTINGS
# ============================================

# Football-Data.org specific
FOOTBALL_DATA_RATE_LIMIT=10
FOOTBALL_DATA_RATE_WINDOW=60000

# The Odds API specific
THE_ODDS_API_REGIONS=uk,us,eu
THE_ODDS_API_MARKETS=h2h,spreads,totals

# RapidAPI specific
RAPIDAPI_RATE_LIMIT=100
RAPIDAPI_RATE_WINDOW=86400000

# ============================================
# DEVELOPMENT / TESTING
# ============================================
# Use mock data for development (no API calls)
USE_MOCK_DATA=false

# Log all API requests
LOG_API_REQUESTS=false

# Simulate API delays (milliseconds)
SIMULATE_API_DELAY=0

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable specific features

# Enable live score auto-refresh
ENABLE_AUTO_REFRESH=true

# Enable betting odds
ENABLE_ODDS=true

# Enable AI predictions
ENABLE_AI_PREDICTIONS=true

# Enable favorites tracking
ENABLE_FAVORITES=true

# Enable racing module
ENABLE_RACING=true

# Enable notifications
ENABLE_NOTIFICATIONS=true

